<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_item"
    android:layout_margin="5dp"
    android:id="@+id/layout_item">
    <TextView
        android:id="@+id/txt_item_date"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="item_date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="right"
        android:textSize="22sp"
        android:textStyle="italic"
        android:paddingRight="20sp"
        android:layout_marginTop="10dp"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/txt_item_title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="item_title"
        app:layout_constraintTop_toBottomOf="@id/txt_item_date"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="24sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#E60D0D"/>
    <TextView
        android:id="@+id/txt_item_description"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="item_Description"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_item_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="22sp"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="#000"/>
    <ImageView
        android:id="@+id/btn_Delete_Note"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintLeft_toRightOf="@id/txt_item_title"
        app:layout_constraintTop_toTopOf="@id/txt_item_date"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>